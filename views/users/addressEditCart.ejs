                    </div>
                  </div>
                </div>
  
                <!-- Text input -->
                <div class="form-outline mb-4">
                  <input type="text" id="form11Example4" value="<%=address.address%>"  name="address"  class="form-control" />
                  <!-- <label class="form-label" for="form11Example4">Address</label> -->
                </div>
  
                
                <!-- address input -->
                <div class="form-outline mb-4">
                <input type="text" id="form11Example6" value="<%=address.city%>"  name="city"  class="form-control" />
