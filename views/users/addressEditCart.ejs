                </div>
                <!-- Number input -->
                <div class="form-outline mb-4">
                  <input type="number" id="form11Example6" value="<%=address.phoneNo%>"  name="phoneNo"  class="form-control" />
                  <!-- <label class="form-label" for="form11Example6">Phone</label> -->
                </div>
  
                <!-- Checkbox -->
                <div class="form-check d-flex justify-content-center mb-2">
                  <label class="form-check-label" for="form11Example8">
                    Submit Edited Address
