<!-- ***** Products Area Starts ***** -->
<section class="section" id="products">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-heading">
          <h2>Our Latest Products</h2>
          <span>Check out all of our products.</span>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <% allProducts.forEach(function(product) { %>
      <div class="col-lg-4">
        <div class="item">
          <div class="thumb">
            <div class="hover-content">
              <ul>
                <li><a href="#"><i class="fa fa-eye"></i></a></li>
                <li><a href="#"><i class="fa fa-star"></i></a></li>
                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
              </ul>
            </div>
            <a href="/singleProduct?id=<%= product._id %>">
              <img src="/upload/<%= product.productImage[0] %>" style="border-radius: 10px;"
                alt="<%= product.productImage %>" height="300px">
            </a>
          </div>
          <div class="down-content">
            <h4 style="text-align: left;">
              <%= product.productName %>
            </h4>
            <span><%= product.price %></span>
            <ul class="stars">
              <% for (let i=0; i < 5; i++) { %>
                <li><i class="fa fa-star"></i></li>
              <% } %>
            </ul>
            <br>
            <p>
              <%= product.productDescription %>
            </p>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>

  <div class="col-lg-12">
    <div class="pagination">
      <ul>
        <% if (currentPage > 1) { %>
          <li><a href="/allProducts?page=<%= currentPage - 1 %>">Back</a></li>
        <% } %>
  
        <% for (let i = 1; i <= totalPages; i++) { %>
          <% if (i === currentPage) { %>
            <li class="active"><a href="#"><%= i %></a></li>
          <% } else { %>
            <li><a href="/allProducts?page=<%= i %>"><%= i %></a></li>
          <% } %>
        <% } %>
  
        <% if (currentPage < totalPages) { %>
          <li><a href="/allProducts?page=<%= currentPage + 1 %>">Next</a></li>
        <% } %>
      </ul>
    </div>
  </div>
  


</section>

<!-- ***** Products Area Ends ***** -->

