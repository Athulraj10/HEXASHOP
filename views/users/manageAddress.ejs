<%-include('../layouts/header',{allcategory})%>
    <style>
        body {
            background-color: #eee;
            height: auto;
            display: flex;
            margin-top: 70px;
            justify-content: center;
            align-items: center;
            background-image: linear-gradient(to right top, #121928, #524351);
        }
        
        .card-1 {
            width: 50%;
            border-radius: 18px;
            border: none;
        }
        
        .card-2 {
            border-radius: 20px;
        }
        
        .card-child {
            margin: 10px;
            border: 3px solid rgb(197, 197, 230);
            border-radius: 16px;
        }
        
        .circle {
            background-color: #ebdffb;
            height: 50px;
            margin: 5px;
            width: 50px;
            border-radius: 50%;
            display: flex;
            color: #9553ea;
            justify-content: center;
            align-items: center;
            font-size: 20px;
        }
        
        .circle-2 {
            background-color: #fbebdf;
            height: 50px;
            width: 50px;
            margin: 5px;
            border-radius: 50%;
            display: flex;
            color: #ea9253;
            justify-content: center;
            align-items: center;
            font-size: 20px;
        }
        
        .circle-3 {
            background-color: blue;
            height: 50px;
            width: 50px;
            border-radius: 50%;
            display: flex;
            color: #fff;
            justify-content: center;
            align-items: center;
            font-size: 20px;
        }
    </style>
</head>
<body style="min-height: 100vh;">
    <div class="card p-3 py-3 m-5 card-1 text-left">
        
        <h4>Delivery Address</h4>

        <div class="p-3 card-2">
            <% data.address.forEach(function(address) { %>
                <div class="p-3 card-child">
        
                    <div class="d-flex flex-row align-items-center">
                        <%if(address.type=='home'){%>
                            <span class="circle">
                                <i class="fa fa-home"></i>
                            </span>
                            <span class="circle">
                                <a href="/profile/manageaddressEdit?id=<%=address._id%>"><i class="fa-solid fa-pen"></i></a>
                            </span>

                            <%}else{%>
                                <span class="circle-2">
                                    <i class="fa fa-bank"></i>
                                </span>

                            <span class="circle-2">
                                <a href="/profile/manageaddressEdit?id=<%=address._id%>"><i class="fa-solid fa-pen"></i></a>
                            </span>
                                <%}%>
                        
        
                        <div class="d-flex flex-column ms-3" style="text-transform: capitalize;">
                            <span class="fw-bold text-center"><%= address.type %></span>
                            <span class="">Name : <%= address.name %></span>
                            <span class="">Address : <%= address.address %></span>
                            <span class="">City : <%= address.city %></span>
                            <span class="">Landmark : <%= address.landmark %></span>
                            <span class="">Mobile : <%= address.phoneNo %></span>
                            <span class="">Pincode : <%= address.pincode %></span>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    

<a href="/profile/manageaddressAddAddress">
            <div class="p-3 card-child mt-4 py-4">
                <div class="d-flex flex-row align-items-center">
                    <span class="circle-3">
                        <i class="fa fa-plus"></i>
                    </span>
                    <div class="d-flex flex-column ms-3 m-3">
                        <h6 class="fw-bold text-primary">Add New Address</h6>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>
    <script src="https://kit.fontawesome.com/5f6d1ef682.js" crossorigin="anonymous"></script>   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
