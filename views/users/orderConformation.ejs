<%- include("../layouts/header.ejs", {allcategory: data.allcategory }) %>

  <section class="h-100 gradient-custom">
            <div class="container py-5 h-100">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-10 col-xl-8">
                  <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5">
                      <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: #a8729a;"><%=data.matchingAddress.name%></span> !</h5>
                    </div>
                    <div class="card-body p-4">
                      <div class="d-flex justify-content-between align-items-center mb-4">
                        <p class="lead fw-normal mb-0" style="color: #a8729a;">Receipt</p>
                        <p class="small text-muted mb-0">Receipt Voucher : <strong><%=data.order.orderNumber%></strong></p>
                      </div>
                      <div class="card shadow-0 border mb-4">
                        <div class="card-body" style="text-transform: capitalize;">
                          <% data.products.forEach(function(product) { %>
                            <div class="row">
                              <div class="col-md-2">
                                <img src="/upload/<%= product.productImage[0] %>" width="60px" height="60px" class="img-fluid" alt="Phone">
                              </div>
                              <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0"><%= product.productName %></p>
                              </div>
                              <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0 small"><%= product.productColor %></p>
                              </div>
                              <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0 small">Capacity: <%= product.productSize %></p>
                              </div>
                              <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0 small">Qty: <%= data.order.totalQuantity %></p>
                              </div>
                              <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0 small">$<%= product.price %></p>
                              </div>
                            </div>
                            
                            

                            <div class="row d-flex align-items-center">
                              <div class="col-md-2">
                                <p class="text-muted mb-0 small">Track Order</p>
                              </div>
                              <div class="col-md-10">
                                <div class="progress" style="height: 6px; border-radius: 16px;">
                                  <div class="progress-bar" role="progressbar" style="width: 65%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="d-flex justify-content-around mb-1">
                                  <p class="text-muted mt-1 mb-0 small ms-xl-5"><%= data.order.status %></p>
                                  <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                                </div>
                              </div>
                            </div>
                            <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                            <% }); %>
                          </div>
                      </div>
                      <div class="card shadow-0 border mb-4">
                        <div class="card-body">
                          <h5 class="card-title">Ordered Address</h5>
                          <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                          <div class="row">
                            <div class="col-md-6">
                              <h6 class="card-subtitle mb-2 text-muted">Shipping Address</h6>
                              <p class="card-text"><strong>Name:</strong> <%= data.matchingAddress.name %></p>
                              <p class="card-text"><strong>Phone:</strong> <%= data.matchingAddress.phoneNo %></p>
                              <p class="card-text"><strong>Address:</strong> <%= data.matchingAddress.address %></p>
                              <p class="card-text"><strong>City:</strong> <%= data.matchingAddress.city %></p>
                              <p class="card-text"><strong>Landmark:</strong> <%= data.matchingAddress.landmark %></p>
                              <p class="card-text"><strong>Address type:</strong> <%= data.matchingAddress.type %></p>
                              <p class="card-text"><strong>Postal Code:</strong> <%= data.matchingAddress.pincode %></p>
                            </div>
                            <div class="col-md-6">
                              <h6 class="card-subtitle mb-2 text-muted">Billing Address</h6>
                              <p class="card-text"><strong>Name:</strong> <%= data.matchingAddress.name %></p>
                              <p class="card-text"><strong>Phone:</strong> <%= data.matchingAddress.phoneNo %></p>
                              <p class="card-text"><strong>Address:</strong> <%= data.matchingAddress.address %></p>
                              <p class="card-text"><strong>City:</strong> <%= data.matchingAddress.city %></p>
                              <p class="card-text"><strong>Landmark:</strong> <%= data.matchingAddress.landmark %></p>
                              <p class="card-text"><strong>Address type:</strong> <%= data.matchingAddress.type %></p>
                              <p class="card-text"><strong>Postal Code:</strong> <%= data.matchingAddress.pincode %></p>
                            </div>
                          </div>
                        </div>
                      </div>
                      
          
                      <div class="d-flex justify-content-between pt-2">
                        <p class="fw-bold mb-0">Order Details</p>
                        <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> $<%=data.order.total%></p>
                      </div>
          
                      <div class="d-flex justify-content-between pt-2">
                        <p class="text-muted mb-0">Invoice Number : <%=data.order.orderNumber%></p>
                        <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> <%=data.order.coupon%></p>
                      </div>
          
                      <div class="d-flex justify-content-between">
                        <p class="small text-muted mb-0">Invoice Date: <strong><%= data.order.orderDate.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: '2-digit', year: 'numeric' }) %></strong></p>
                        <p class="text-muted mb-0"><span class="fw-bold me-4">GST 18%</span></p>
                      </div>
          
                      <div class="d-flex justify-content-between mb-5">
                        <p class="text-muted mb-0">Recepits Voucher : <%=data.order.coupon%></p>
                        <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
                      </div>
                    </div>
                    <div class="card-footer border-0 px-4 py-5"
                      style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                      <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                        paid: <span class="h2 mb-0 ms-2">$<%=data.order.total%></span></h5>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>


</body>
<script>
  window.onbeforeunload = function() {
    return false;
  };

  history.pushState(null, null, location.href);
  window.addEventListener('popstate', function() {
    history.pushState(null, null, location.href);
  });

  setTimeout(function() {
    window.location.href = '/profile';
  }, 5000);
</script>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"
  integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>

</html>