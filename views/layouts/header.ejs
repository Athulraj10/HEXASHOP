                            <li class="submenu">
                                <a href="javascript:;">Category List</a>
                                <% if (allcategory && allcategory.length> 0) { %>
                                    <ul>
                                        <% allcategory.forEach(function(category) { %>
                                            <li><a href="/categorySort?categoryid=<%= category._id %>">
