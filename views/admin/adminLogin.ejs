<body class="bg-gradient-login" style="background-color: black;">
  <div class="container-login" >
    <div class="row justify-content-center" >
      <div class="col-xl-5 col-lg-12 col-md-9">
        <div class="card shadow-sm my-3"  style="background: linear-gradient(to right, #9a8d8d, #336775);">
          <div class="card-body p-1">
            <div class="row">
              <div class="col-lg-12">
                <div class="login-form">
                  <div class="text-center">
                    <h1 class="h3 text-light font-weight-bold mb-4">Welcome Back Sir</h1>
                  </div>
                  <form action="/admin/adminlogin" method="post">
                    <div class="form-group">
                      <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" name="email"
                        placeholder="Enter Email Address">
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control" id="exampleInputPassword" name="password" placeholder="Enter Key"> 
                    </div>
                    <div class="custom-control custom-checkbox small" style="line-height: 1px; padding: 0%;">
                      <button class="btn btn-dark btn-md btn-block" type="submit">Login</button>
                      
                    </form>
                  </div>
                    <a
                      style="color: #ff0000;font-size: 20px; text-decoration: none; margin-left: 140px;font-weight: bold;">
                      <% if (typeof message !=='undefined' ) { %>
                        <%= message %>
                        <% } %>
                      </a>
                    </div>
                    
                    <hr>
                    
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
