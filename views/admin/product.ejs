<%-include("../layouts/adminheader.ejs")%>

<!-- product.ejs -->

<!-- product.ejs -->

<div style="display: flex;flex-direction: column; width: 100%;">
<table class="table table-dark" style="margin-top: 80px;;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Color</th>
            <th>Size</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Images</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product) { %>
            <tr>
              <td><%= product.productName %></td>
              <td><%= product.productColor %></td>
              <td><%= product.productSize %></td>
              <td><%= product.category_id %></td>
              <td><%= product.productQuantity %></td>
              <td><%= product.productStatus %></td>

              <td>
                <% product.productImage.forEach(function(image, index) { %> 
                    <img src="/upload/<%= image %>" style="border-radius: 5px;margin:2px ; width: 50px; height: 50px;" >
                <% }) %></td>
           
                <td>
                <a href="/admin/editProduct?id=<%= product._id %>" >Edit</a>
             </td>          
             <td>
                <a href="/admin/deleteProduct?id=<%= product._id %>" style="color: red;">Delete</a>
             </td>          
             </tr>
          <% }) %>
    </tbody>
  </table>

  <div class="d-flex" style="width: 50%;">
    <button class="btn m-4 btn-dark btn-block text-uppercase"><a href="/admin/addproduct">Add product</a>
    </button>
    <button class="btn m-4 btn-dark btn-block text-uppercase"><a href="/admin/adminhome">Home</a>
  </button>
  <button class="btn m-4 btn-dark btn-block text-uppercase"><a href="/admin/category">Add New
    Category</a>
</button>
  </div>
</div>
</body>
</html>